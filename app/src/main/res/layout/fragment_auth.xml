<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".authorization.AuthFragment"
             android:background="@color/colorBackground">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@color/colorBackground">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
                android:id="@+id/textInputLayout2" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
                app:layout_constraintVertical_chainStyle="packed">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/field_email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext" android:textSize="16sp" android:lineSpacingExtra="8sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toTopOf="@+id/materialButton" android:layout_marginBottom="23dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/field_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/ic_password" android:lineSpacingExtra="8sp" android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton android:layout_width="0dp"
                                                           android:layout_height="wrap_content"
                                                           app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginStart="32dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginEnd="32dp"
                                                           android:layout_marginBottom="8dp"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           android:layout_marginTop="8dp"
                                                           android:id="@+id/materialButton"
                                                           android:text="Войти" tools:text="Войти"
                                                           app:backgroundTint="@color/colorOrange"/>
        <androidx.appcompat.widget.Toolbar android:layout_width="0dp"
                                           android:layout_height="wrap_content"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintTop_toTopOf="parent"
                                           android:elevation="6dp"
                                           android:visibility="visible"
                                           android:id="@+id/toolbar"
                                           android:minHeight="64dp"
                                           app:layout_constraintVertical_chainStyle="packed"
                                           app:layout_constraintHorizontal_bias="0.0"
                                           app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
            <androidx.appcompat.widget.AppCompatImageButton android:layout_width="24dp"
                                                            android:layout_height="24dp"
                                                            android:src="@drawable/ic_arrow_back"
                                                            android:background="?selectableItemBackgroundBorderless"
                                                            android:padding="8dp"
                                                            tools:layout_editor_absoluteY="8dp"
                                                            tools:layout_editor_absoluteX="16dp"
                                                            android:scaleType="center"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/greyish_brown"
                    android:lineSpacingExtra="8sp"
                    tools:text="@string/auth_title"
                    android:text="@string/auth_title" tools:layout_editor_absoluteY="19dp"
                    tools:layout_editor_absoluteX="72dp"
                    android:layout_marginLeft="32dp"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="@string/button_create_user"
                    app:rippleColor="@color/colorDarkSky"
                    app:strokeColor="@color/colorDarkSky"
                    android:layout_gravity="end"
                    android:layout_marginRight="16dp"/>
        </androidx.appcompat.widget.Toolbar>
        <View android:layout_width="match_parent" android:layout_height="4dp"
              android:background="@drawable/toolbar_shadow"
              app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>